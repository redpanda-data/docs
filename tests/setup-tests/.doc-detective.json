{
  "relativePathBase": "cwd",
  "detectSteps": false,
  "beforeAny": ["./fetch-versions-and-rpk.json"],
  "logLevel": "warning",
  "runOn": [
    {
      "platforms": ["linux", "mac"],
      "browsers": [
        {
          "name": "firefox",
          "headless": true,
          "window": {},
          "viewport": {
            "width": 1366,
            "height": 700
          }
        }
      ],
      "contextId": "3d08e0bf-b258-47c3-b3c8-7f6743ed7d5c"
    }
  ],
  "fileTypes": [
    {
      "name": "Markdown",
      "extensions": ["md"],
      "inlineStatements": {
        "testStart": ["\\[comment\\]: # \\(test start(.*?)\\)"],
        "testEnd": ["\\[comment\\]: # \\(test end\\)"],
        "ignoreStart": ["\\[comment\\]: # \\(test ignore\\)"],
        "step": ["\\[comment\\]: # \\(step(.*?)\\)"]
      },
      "markup": [
        {
          "name": "Hyperlink",
          "regex": ["(?<=(?<!!)\\[[\\w\\s]+\\]\\().*?(?=\\))"],
          "actions": ["checkLink"]
        },
        {
          "name": "Navigation link",
          "regex": [
            "(?<=([Oo]pen|[Cc]lick) (?<!!)\\[[\\w\\s]+\\]\\().*?(?=\\))"
          ],
          "actions": ["goTo"]
        },
        {
          "name": "Onscreen text",
          "regex": ["(?<=\\*\\*)[\\w\\s]+?(?=\\*\\*)"],
          "actions": ["find"]
        },
        {
          "name": "Image",
          "regex": ["(?<=\\!\\[.*?\\]\\().*?(?=\\))"],
          "actions": [
            {
              "screenshot": {
                "directory": "samples",
                "maxVariation": 0.1,
                "overwrite": "aboveVariation"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "AsciiDoc",
      "extensions": ["adoc", "asciidoc"],
      "inlineStatements": {
        "testStart": ["// \\(test start(.*?)\\)"],
        "testEnd": ["// \\(test end\\)"],
        "ignoreStart": ["// test ignore"],
        "step": ["// \\(step(.*?)\\)"]
      },
      "markup": []
    }
  ],
  "telemetry": {
    "send": true,
    "userId": "Redpanda Data"
  }
}