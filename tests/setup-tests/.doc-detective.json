{
  "relativePathBase": "cwd",
  "detectSteps": false,
  "beforeAny": ["./fetch-versions-and-rpk.json"],
  "logLevel": "warning",
  "runOn": [
    {
      "platforms": ["linux", "mac"],
      "browsers": [
        {
          "name": "firefox",
          "headless": true,
          "window": {},
          "viewport": {
            "width": 1366,
            "height": 700
          }
        }
      ],
      "contextId": "3d08e0bf-b258-47c3-b3c8-7f6743ed7d5c"
    }
  ],
  "fileTypes": [
    {
      "name": "AsciiDoc",
      "extensions": ["adoc", "asciidoc"],
